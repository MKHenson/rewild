{
  "compilerOptions": {
    "baseUrl": "../",
    "module": "commonjs",
    "target": "es2020",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "isolatedModules": false,
    "strict": false,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types"],
    "types": ["mocha", "node"]
  },
  "ts-node": {
    "files": true
  },
  "exclude": ["./node_modules"]
}
